{
  "$schema": "https://opencode.ai/config.json",
  "default_agent": "build",
  "instructions": [
    "AGENTS.md",
    "docs/spec-index.md",
    "docs/agent-governance.md",
    "docs/agent-session-playbook.md",
    "docs/parallel-execution.md",
    "PLAN.md",
    "PROGRESS.md"
  ],
  "permission": {
    "edit": "allow",
    "webfetch": "ask",
    "bash": {
      "*": "allow",
      "git push*": "ask",
      "go get *": "ask",
      "pnpm add*": "ask",
      "npm install *": "ask",
      "bun add *": "ask",
      "rm *": "ask"
    }
  },
  "agent": {
    "build": {
      "permission": {
        "task": {
          "*": "deny",
          "architect": "allow",
          "implementer": "allow",
          "reviewer": "allow",
          "spec-auditor": "allow",
          "general": "allow",
          "explore": "allow"
        }
      }
    },
    "plan": {
      "permission": {
        "task": {
          "*": "deny",
          "architect": "allow",
          "reviewer": "allow",
          "spec-auditor": "allow",
          "general": "allow",
          "explore": "allow"
        }
      }
    },
    "architect": {
      "mode": "subagent",
      "permission": {
        "task": {
          "*": "deny"
        }
      }
    },
    "implementer": {
      "mode": "subagent",
      "permission": {
        "task": {
          "*": "deny"
        }
      }
    },
    "reviewer": {
      "mode": "subagent",
      "permission": {
        "task": {
          "*": "deny"
        }
      }
    },
    "spec-auditor": {
      "mode": "subagent",
      "permission": {
        "task": {
          "*": "deny"
        }
      }
    }
  }
}
