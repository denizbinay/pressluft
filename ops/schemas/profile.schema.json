{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pressluft.dev/schemas/profile.schema.json",
  "title": "Pressluft Ops Profile",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "key",
    "name",
    "version",
    "description",
    "base_image",
    "image_policy",
    "services",
    "hardening",
    "hooks",
    "artifacts"
  ],
  "properties": {
    "key": {
      "type": "string",
      "minLength": 1,
      "pattern": "^[a-z0-9][a-z0-9-]*$"
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "minLength": 1
    },
    "base_image": {
      "type": "string",
      "minLength": 1
    },
    "image_policy": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "allow_override",
        "allowed"
      ],
      "properties": {
        "allow_override": {
          "type": "boolean"
        },
        "allowed": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    "services": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "hardening": {
      "type": "object"
    },
    "hooks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": [
          "bootstrap",
          "harden",
          "configure",
          "verify",
          "maintenance"
        ]
      }
    },
    "artifacts": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "playbook",
        "role"
      ],
      "properties": {
        "playbook": {
          "type": "string",
          "minLength": 1
        },
        "role": {
          "type": "string",
          "minLength": 1
        }
      }
    }
  }
}
